<div class="col">
  <div class="card h-100 hoverable">
    {% if include.project.img %}
      {% assign img_path = include.project.img | prepend: '/' %}
      {% include figure.liquid loading="lazy" path=img_path sizes="250px" alt=include.project.title class="card-img-top" %}
    {% endif %}
    <div class="card-body d-flex flex-column">
      <h3 class="card-title">{{ include.project.title }}</h3>
      <p class="card-text flex-grow-1">{{ include.project.description }}</p>
      <div class="mt-auto">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            {% if include.project.type %}
              <span class="badge bg-secondary me-2">{{ include.project.type }}</span>
            {% endif %}
            {% if include.project.year %}
              <span class="text-muted small">{{ include.project.year }}</span>
            {% endif %}
          </div>
          <a href="{{ include.project.link }}" class="btn btn-sm z-depth-0" target="_blank">
            <i class="fa-solid fa-file-pdf me-1"></i>View Report
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

